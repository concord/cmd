#!/bin/bash --login
ORIG=${PWD}
CCORD_DIR=$(dirname $(readlink -f "$0"))
export PATH=${PATH}:${CCORD_DIR}
source ${CCORD_DIR}/.env/bin/activate

case ${1} in
    graph)
        shift
        python ${CCORD_DIR}/print_graph.py "$@"
        ;;
    deploy)
        shift
        python  ${CCORD_DIR}/deploy.py "$@"
        ;;
    kill)
        shift
        python ${CCORD_DIR}/kill_task.py "$@"
        ;;
    scale)
        shift
        python ${CCORD_DIR}/scale.py "$@"
        ;;
    trace)
        shift
        python ${CCORD_DIR}/tracer.py "$@"
        ;;
    install)
        shift
        sudo python ${CCORD_DIR}/setup.py install
        ;;
    *)
        echo "Usage: "
        echo "concord [program] [flags] "
        echo "concord (graph|kill|deploy|scale|trace) -h"
        ;;
esac
